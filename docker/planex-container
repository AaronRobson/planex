#!/bin/sh

: ${PLANEX_CONTAINER:="xenserver/planex:latest"}

docker create \
  --name planex-persist \
  -v /var/cache/mock \
  -v /var/cache/yum \
  $PLANEX_CONTAINER /bin/true

# Fill in volumes automatically from the pins file
# Chicken and egg - need to fill it in when pinning as well
docker run \
  --privileged \
  --rm -i -t \
  --volumes-from planex-persist \
  -v ${PWD}:/build \
  $PLANEX_CONTAINER "$*"
